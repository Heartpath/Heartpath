<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat android:id="@+id/linearlayout_map_letter"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/_8sdp"
    android:paddingHorizontal="@dimen/_16sdp"
    android:background="@color/white"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/button_report"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/image_un_selected_button"
        android:layout_marginEnd="@dimen/_4sdp"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/image_map_letter"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_8sdp"
        android:background="@drawable/custom_bottom_stroke"
        android:paddingVertical="@dimen/_4sdp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_letter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하동혁님이 보낸 편지"
            style="@style/Black_12_Bold_NanumText"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_4sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_letter_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023.10.11"
            style="@style/DarkGray_10_Regular_NanumText"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>