<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/PrimaryLightBlue"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_letter_paper_box"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical">
        <com.zootopia.presentation.writeletter.LetterPaperCanvas
            android:id="@+id/imageview_letter_paper"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@tools:sample/avatars"
            android:background="@color/Green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.5">
        </com.zootopia.presentation.writeletter.LetterPaperCanvas>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_palette"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_round_corner_lightest_gray"
            android:paddingHorizontal="@dimen/_4sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_palette" />

        <ImageButton
            android:id="@+id/button_save"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/custom_round_corner_lightest_gray"
            android:paddingHorizontal="@dimen/_4sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_save" />

    </LinearLayout>

</LinearLayout>
