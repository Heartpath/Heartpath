<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    tools:context=".map.ReadyGoDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/_16sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:src="@drawable/icon_close"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="편지 찾기 성공!"
            style="@style/Black_16_Bold_NanumText"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_10sdp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/imageview_letter"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:src="@drawable/image_bird_leg_camera"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_10sdp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_move"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="편지 보관함으로 이동하시겠어요?"
            android:padding="@dimen/_3sdp"
            android:gravity="center"
            android:background="@drawable/custom_round_stroke_button"
            android:outlineProvider="none"
            style="@style/Black_12_Bold_NanumText"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>