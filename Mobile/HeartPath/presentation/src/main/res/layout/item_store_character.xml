<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearlayout_store_character"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_148sdp"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/imageview_store_bird"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/image_bird_silhouette"
                android:scaleType="fitCenter"
                android:padding="@dimen/_20sdp"
                android:background="@drawable/custom_round_corner_extra_light_gray"/>
            <ImageView
                android:id="@+id/imageview_is_owned"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintVertical_bias="0.1"
                android:src="@drawable/icon_check_circle"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textview_store_bird_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DarkGray_14_ExtraBold_NanumText"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            tools:text = "bird name"/>
        <TextView
            android:id="@+id/textview_store_bird_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/DarkGray_10_ExtraBold_NanumText"
            android:layout_marginTop="@dimen/_4sdp"
            tools:text = "100 우표"/>
    </LinearLayout>

</LinearLayout>